<h1 class="text-center mt-4">Log in</h1>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <%= form_with(scope: :session, url: login_path,  class: "shadow p-4 mb-5 mt-5 bg-light rounded", local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :email, class: "col-3 col-form-label text-right" %>
                    <div class="col-9">
                        <%= f.email_field :email, placeholder: "Enter your email address", class: "form-control" %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.label :password, class: "col-3 col-form-label text-right" %>
                    <div class="col-9">
                        <%= f.password_field :password, placeholder: "Enter your password", class: "form-control" %>
                    </div>
                </div>

                <div class="form-group row justify-content-center">
                    <%= f.submit "Log in", class: "btn btn-success" %>
                </div>
            <% end %>
        </div>
    </div>

<%= link_to '[ Return to article listing ]', articles_path, class: " row justify-content-center mb-5" %>
</div>