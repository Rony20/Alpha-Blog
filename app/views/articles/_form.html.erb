
<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors' %>
            <%= form_with(model: @article, class: "shadow p-4 mb-5 mt-5 bg-light rounded", local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :title, class: "col-2 col-form-label text-right" %>
                    <div class="col-10">
                        <%= f.text_field :title, placeholder: "Article title", class: "form-control" %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.label :description, class: "col-2 col-form-label text-right" %>
                    <div class="col-10">
                        <%= f.text_area :description, rows: 10, placeholder: "Article description", class: "form-control" %>
                    </div>
                </div>

                <div class="form-group row justify-content-center">
                    <%= f.submit class: "btn btn-success" %>
                </div>
            <% end %>
        </div>
    </div>

<%= link_to '[ Return to article listing ]', articles_path, class: " row justify-content-center mb-5" %>
</div>