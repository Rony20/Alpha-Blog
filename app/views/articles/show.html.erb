<h1 class="text-center mt-4">Article Details</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-8 mt-4 mb-5">
            <div class="card">
                <div class="card-header text-center">
                    <div class="font-weight-bold"><%= @article.title%></div> 
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <div class="font-weight-bold">Description</div>
                        <%= simple_format(@article.description) %>
                    </li>
                    <li class="list-group-item">
                        <div class="font-weight-bold">Created At</div>
                        <%= @article.created_at %>
                        <%# time = Time.new @article.created_at.to_s %>
                        <%#= time.strftime("%-d %B %Y %A, %l:%M %p") %>
                    </li>
                    <li class="list-group-item">
                        <div class="font-weight-bold">Updated At</div>
                        <%= @article.updated_at %>
                        <%# time = Time.new @article.updated_at.to_s %>
                        <%#= time.strftime("%-d %B %Y %A, %l:%M %p") %>
                    </li>
                    <li class="list-group-item">
                        <div class="font-weight-bold">Created By</div>
                        <%= link_to gravatar_for(@article.user, size: 40, classes: "rounded mr-2"), user_path(@article.user) %><%= @article.user.username %>
                    </li>
                </ul>
                <div class="card-footer text-center">
                    <% if logged_in? && @article.user == current_user %>
                        <%= link_to 'Edit', edit_article_path(@article), class: "text-success mr-2" %>
                        <%= link_to 'Delete', article_path(@article), method: :delete, 
                        data: { confirm: "Are you sure ?"}, class: "text-danger mr-2" %>
                    <% end %>
                    <%= link_to 'Back', articles_path, class: "text-info" %>
                </div>
            </div>
        </div>
    </div>
</div>