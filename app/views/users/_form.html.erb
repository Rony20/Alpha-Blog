
<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <%= render 'shared/errors', model_object: @user %>
            <%= form_with(model: @user, class: "shadow p-4 mb-5 mt-5 bg-light rounded", local: true) do |f| %>
                <div class="form-group row">
                    <%= f.label :username, class: "col-3 col-form-label text-right" %>
                    <div class="col-9">
                        <%= f.text_field :username, placeholder: "Enter a username", class: "form-control" %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.label :email, class: "col-3 col-form-label text-right" %>
                    <div class="col-9">
                        <%= f.email_field :email, placeholder: "Enter your email address", class: "form-control" %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.label :password, class: "col-3 col-form-label text-right" %>
                    <div class="col-9">
                        <%= f.password_field :password, placeholder: "Choose a password", class: "form-control" %>
                    </div>
                </div>

                <div class="form-group row justify-content-center">
                    <%= f.submit @user.new_record? ? "Sign Up" : "Update Account", class: "btn btn-success" %>
                </div>
            <% end %>
        </div>
    </div>

<%= link_to '[ Return to article listing ]', articles_path, class: " row justify-content-center mb-5" %>
</div>